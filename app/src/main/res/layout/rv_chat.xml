<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/boxRight"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:background="#FFFFFF"
			android:gravity="right"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/sas"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:gravity="right|bottom"
				android:orientation="horizontal"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/rightImageMessage"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#DD1D5E"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/rightContentImg"
						android:focusable="false"
						android:layout_width="200dp"
						android:layout_height="200dp"
						android:src="@drawable/logoclear"
						android:scaleType="fitXY"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/rightText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#DD1D5E"
					android:orientation="vertical">
					<TextView
						android:id="@+id/lblRight"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="TextView"
						android:textSize="14sp"
						android:textColor="#FFFFFF"/>
				</LinearLayout>
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/rightSenderIcon"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginLeft="8dp"
					android:src="@drawable/logoclear"
					app:civ_border_width="3dp"
					app:civ_border_color="#DD1E5D"
					app:civ_circle_background_color="#FFFFFF"
					app:civ_border_overlay="true"/>
			</LinearLayout>
			<TextView
				android:id="@+id/rightDate"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:layout_marginRight="58dp"
				android:gravity="right"
				android:text="TextView"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/boxLeft"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:background="#FFFFFF"
			android:gravity="bottom"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left|bottom"
				android:orientation="horizontal">
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/leftSenderIcon"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginRight="8dp"
					android:src="@drawable/logoclear"
					app:civ_border_width="3dp"
					app:civ_border_color="#DD1E5D"
					app:civ_circle_background_color="#FFFFFF"
					app:civ_border_overlay="true"/>
				<LinearLayout
					android:id="@+id/leftText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#DD1D5E"
					android:orientation="vertical">
					<TextView
						android:id="@+id/lblLeft"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="TextView"
						android:textSize="14sp"
						android:textColor="#FFFFFF"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/leftImageMessage"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#DD1D5E"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/leftContentImg"
						android:focusable="false"
						android:layout_width="200dp"
						android:layout_height="200dp"
						android:src="@drawable/logoclear"
						android:scaleType="fitXY"/>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/leftdate"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="58dp"
				android:layout_marginTop="3dp"
				android:text="TextView"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
