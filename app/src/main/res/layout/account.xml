<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/loginForm"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="30dp"
			android:paddingTop="8dp"
			android:paddingRight="30dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview3"
				android:layout_width="300dp"
				android:layout_height="250dp"
				android:src="@drawable/hello"
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/textview6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp"
				android:padding="8dp"
				android:text="Hi, Welcome Back!"
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="#000000"/>
			<EditText
				android:id="@+id/tbLoginEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Email"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionNext"/>
			<EditText
				android:id="@+id/tbLoginPassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Password"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:inputType="textPassword"
				android:imeOptions="actionNext"/>
			<Button
				android:id="@+id/btnLogin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#E91E63"
				android:text="LOGIN"
				android:textSize="16sp"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/textview7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="OR LOGIN USING YOUR GOOGLE ACCOUNT"
				android:textSize="12sp"
				android:textColor="#607D8B"/>
			<com.google.android.gms.common.SignInButton
				android:id="@+id/btnGoogleLogin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<Button
				android:id="@+id/btnToRegister"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:text="New to SADCC Automobile Online Ordering System\? Come and Join Us."
				android:textSize="16sp"
				android:textColor="#E91E63"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/registerform"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="30dp"
			android:paddingTop="8dp"
			android:paddingRight="30dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="250dp"
				android:layout_height="250dp"
				android:src="@drawable/welcome"
				android:scaleType="fitXY"/>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp"
				android:padding="8dp"
				android:text="Hello, Come and Join Us."
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="#000000"/>
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/tb_fname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="First Name"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext"
					android:layout_weight="1"/>
				<EditText
					android:id="@+id/tb_mname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:padding="8dp"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Middle Name"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext"
					android:layout_weight="1"/>
				<EditText
					android:id="@+id/tb_lname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Last Name"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext"
					android:layout_weight="1"/>
			</LinearLayout>
			<EditText
				android:id="@+id/tb_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Email"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:imeOptions="actionNext"/>
			<EditText
				android:id="@+id/tb_password"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Password"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:inputType="textPassword"
				android:imeOptions="actionNext"/>
			<EditText
				android:id="@+id/tb_repassword"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Re-type password"
				android:textColorHint="#607D8B"
				android:singleLine="true"
				android:inputType="textPassword"
				android:imeOptions="actionNext"/>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview3"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Gender"
					android:textSize="16sp"
					android:textColor="#000000"/>
				<LinearLayout
					android:id="@+id/boxGender"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1">
					<TextView
						android:id="@+id/lbGender"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:padding="8dp"
						android:text="Male"
						android:textSize="16sp"
						android:textColor="#000000"
						android:layout_weight="1"/>
					<LinearLayout
						android:id="@+id/linear21"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:background="#DD1D5E"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/imageview4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_keyboard_arrow_down_white"
							android:scaleType="center"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="20dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview4"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Birthdate"
					android:textSize="16sp"
					android:textColor="#000000"/>
				<LinearLayout
					android:id="@+id/boxBday"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/tb_bday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="8dp"
						android:padding="8dp"
						android:text="2022-10-12"
						android:textSize="16sp"
						android:textColor="#000000"
						android:layout_weight="1"/>
					<LinearLayout
						android:id="@+id/linear5"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:background="#E91E63"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/imageview2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_event_white"
							android:scaleType="center"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<Button
				android:id="@+id/btnRegister"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#E91E63"
				android:text="AGREE AND JOIN"
				android:textSize="16sp"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="By clicking Agree &amp; Join, you agree to the SADCC Automobile Online Ordering System, User Agreement and Privacy Policy."
				android:textSize="12sp"
				android:textColor="#607D8B"/>
			<Button
				android:id="@+id/btnToLoginForm"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:text="Already have an account\? Sign in."
				android:textSize="16sp"
				android:textColor="#E91E63"/>
			<Spinner
				android:id="@+id/spinnerGender"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:padding="8dp"
				android:spinnerMode="dialog"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
